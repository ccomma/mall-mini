.container {
  height: 56rpx;
  padding: 0 25rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
  font-size: 22rpx;
  border: 1rpx solid #f5f5f5;
  border-radius: 50px;
  min-width: 90rpx;
}

.forbidden {
  text-decoration: line-through;
  color: #aaa;
}

.selected {
  color: #E1251B;
  font-weight: bold;
  border-color: #E1251B;
  background-color: #FFF4F4;
}