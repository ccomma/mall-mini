page {
  background-color: #fff;
}

.container {
  padding: 35rpx 0 35rpx 35rpx;
}

/* 商品信息 */
.item-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 44rpx;
}
.image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10px;
  margin-right: 22rpx;
}
.item-content-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  height: 200rpx;
}
.item-text-view {
  font-size: 24rpx;
  margin-top: 5rpx;
}
.selected-text {
  color: #aaa;
  margin-right: 15rpx;
}

/* 滚动栏 */
.scroll-view {
  height: 500rpx;
}
.inner-scroll-view {
  padding-right: 35rpx;
  padding-bottom: 35rpx;
}
.counter-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.counter-text {
  color: #333;
  font-size: 27rpx;
  font-weight: 600;
}

/* 按钮 */
.btn-view {}

.price-decimal {
  font-size: 22rpx;
}