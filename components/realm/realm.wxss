page {
  background-color: #fff;
}

.container {
  padding: 35rpx 0 35rpx 35rpx;
}

/* 商品信息 */
.item-view {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.image {
  width: 200rpx;
  height: 200rpx;
}
.item-content-view {
  display: flex;
  flex-direction: column;
  justify-content: end;
}

/* 滚动栏 */
.scroll-view {
  height: 500rpx;
}
.inner-scroll-view {
  padding-right: 35rpx;
}
.counter-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.counter-text {
  color: #333;
  font-size: 27rpx;
  font-weight: 600;
}

