page {
  background-color: #fff;
}

.container {
  padding: 35rpx 0;
}

/* 商品信息 */
.item-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 35rpx;
  margin-bottom: 44rpx;
}

.image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10px;
  margin-right: 22rpx;
}

.item-content-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  height: 200rpx;
}

.item-text-view {
  font-size: 24rpx;
  margin-top: 5rpx;
}

.selected-text {
  color: #aaa;
  margin-right: 15rpx;
}

/* 滚动栏 */
.scroll-view {
  height: 500rpx;
}

.inner-scroll-view {
  padding: 0 35rpx 35rpx 35rpx;
}

.counter-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.counter-text {
  color: #333;
  font-size: 27rpx;
  font-weight: 600;
}

.price-decimal {
  font-size: 24rpx;
  font-weight: bold;
}

/* 按钮 */
.btn-container {
  position: absolute;
  bottom: 0;
  width: 100%;
}

.btn {
  background-color: #E1251B;
  border-radius: 50px;
  margin: 40rpx 36rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.btn-text {
  color: #f5f5f5;
  font-weight: bold;
  font-size: 24rpx;
  height: 74rpx;
  line-height: 74rpx;
}