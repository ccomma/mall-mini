page {
  background-color: #fff;
}

.container {
  padding: 30rpx
}

/* 商品信息 */
.item-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 44rpx;
}
.image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10px;
  margin-right: 22rpx;
}
.item-content-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  height: 200rpx;
}
.item-text-view {
  font-size: 24rpx;
  margin-top: 5rpx;
}
.selected-text {
  color: #aaa;
  margin-right: 15rpx;
}

/* 滚动栏 */
.scroll-view {
  height: 1000rpx;
}

/* 按钮 */
.btn-view {}

.price-decimal {
  font-size: 22rpx;
}