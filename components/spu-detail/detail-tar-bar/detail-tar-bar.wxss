@import "../../../static/iconfont/iconfont.wxss";

.container {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 110rpx;
}

.icons {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    width: 440rpx;
    height: 100%;
}

.icons>view {
    width: 50%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.icons .iconfont {
    font-size: 40rpx;
}

.icon-text {
    font-size: 20rpx;
}

.red-font {
    color: #E1251B;
}

.cart-badge {
    background-color: #fff !important;
    color: #E1251B !important;
    border: 2rpx solid #E1251B;
    letter-spacing: 0 !important;
    font-size: 18rpx !important;
    height: 26rpx !important;
    line-height: 24rpx !important;
    min-width: 28rpx !important;
    padding: 0 7rpx !important;
    left: 60% !important;
    top: -8rpx !important;
}

/* 按钮 */
.btn-container {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.btn {
    width: 100%;
    height: 74rpx;
    line-height: 74rpx;
    text-align: center;
    border-radius: 100rpx;
    font-weight: bold;
    font-size: 24rpx;
}

.cart-btn {
    margin: 20rpx 0 20rpx 20rpx;
    color: #fff;
    background-color: #FFC75F;
}

.buy-btn {
    margin: 20rpx;
    color: #fff;
    background-color: #E1251B;
}