/* 分类 */
.category-item {
  margin: 0 20rpx;
}

/* 轮播图 */
.top-theme {
  width: 100%;
  height: 300rpx;
  display: flex;
  margin-bottom: 16rpx;
}

/* 宫格模块 */
.grid {
  padding: 0 12rpx 16rpx 0;
  margin-bottom: 16rpx;
}
.grid-item {
  padding: 16rpx 0 0 16rpx !important;
}
.grid-model {
  background-color: #fff;
  width: 100%;
  height: 220rpx;
  border-radius: 10px;
  display: flex;
  flex-direction: row;
  padding: 15rpx;
  box-sizing: border-box;
}
.model {
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: flex-start;
}
.model-text {
  font-weight: 550;
}
.model-image {
  width: 100%;
}

